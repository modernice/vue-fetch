{
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "declaration": false,
    "pretty": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "isolatedModules": true,
    "skipLibCheck": true
  },
	"include": ["./src/**/*"],
  "exclude": ["**/node_modules/**"]
}